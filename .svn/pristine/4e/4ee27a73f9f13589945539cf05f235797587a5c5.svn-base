// ---- 房型與票種連動 ---- Start

$(".selectroom").each(function(){
	$(this).bind("change",function(){
		var roomType = $(this).attr("id");
		var roomName = "";
		var roomNo = 0;
		var roomDiv = $('#' + roomType + 'Rooms');
		var rname = "";
		var tname = "";
		var i = $('#' + roomType + 'Rooms span').size();
		var si = $(this).val();
		var appendStr = "";

		if ( roomType == "sgl" )
		{	roomName="單人房";roomNo=1;}
		else if ( roomType == "twn" )
		{	roomName="雙人房";roomNo=2;}
		else if ( roomType == "trp" )
		{	roomName="三人房";roomNo=3;}
		else if ( roomType == "qud" )
		{	roomName="四人房";roomNo=4;}

		var tMax = '';		// 判斷票種數量上限
		var tMaxFull = '';	// 預設成人票種數量
		for (k=0; k<=roomNo; k++)
		{
			tMax = tMax + '<option value="' + k + '">' + k + '</option>';

			tMaxFull = tMaxFull + '<option value="' + k + '"';
			if (k==roomNo)
			{
				tMaxFull = tMaxFull + ' selected';
			}
			tMaxFull = tMaxFull + '>' + k + '</option>';
		}

		/* 房數增加 */
		if ( si > i )
		{
			for (j=i; j<=si-1; j++)
			{
				rname = roomType + "Rooms_" + j;
				tname = roomType + "Rooms[" + j + "].";

				if (j == 0)
				{	appendStr = "<hr>";	}
				else
				{	appendStr = "";	}

				appendStr = '<span>' + appendStr + '<font style="font-size:1.2em;color:green;">第' + (j+1) + '間 ' + roomName + '</font><div id="' + rname +'" name="' + rname +'"><div class="row">';
				appendStr = appendStr + '<div class="control-group col-sm-3"><label class="control-label" for="' + tname +'full">全票</label><small style="color:red;"> 12-64歲</small><div class="controls"><select id="' + tname +'full" name="' + tname +'full" class="form-control input-sm">' + tMaxFull + '</select></div></div>';
				//暫定 孩童票只能選擇0-2張
				appendStr = appendStr + '<div class="control-group col-sm-3"><label class="control-label" for="' + tname +'children">孩童票</label><small style="color:red;"> 6-11歲</small><div class="controls"><select id="' + tname +'children" name="' + tname +'children" class="form-control input-sm"><option value="0">0</option><option value="1">1</option><option value="2">2</option></select></div></div>';
				appendStr = appendStr + '<div class="control-group col-sm-3"><label class="control-label" for="' + tname +'half">愛心票</label><div class="controls"><select id="' + tname +'half" name="' + tname +'half" class="form-control input-sm">' + tMax + '</select></div></div>';
				appendStr = appendStr + '<div class="control-group col-sm-3"><label class="control-label" for="' + tname +'senior">敬老票</label><small style="color:red;"> 65歲以上</small><div class="controls"><select id="' + tname +'senior" name="' + tname +'senior" class="form-control input-sm">' + tMax + '</select></div></div></div></div><br></span>';

				$(appendStr).appendTo(roomDiv);
			}
		}

		/* 房數減少 */
		if ( i > si )
		{
			for (j=i-1; j>=si; j--)
			{
				rname = roomType + "Rooms_" + j;
				$('#' + rname).parent('span').remove();
			}
		}

	});
});

